%section{class:'post'}
  %header{class: 'post-header'}
    %h2{class: 'post-title'}
      = link_to_post(post)
    %p{class: 'post-meta'}
      = post.formatted_date
      %a{class: "post-category post-category-#{post.category}", href: "#"}
        = post.category
    %div{class: 'post-description'}
      %p
        = post.body
